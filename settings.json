{
  "permissions": {
    "allow": [
      "mcp__frame0-mcp-server__*",
      "WebFetch(*)",
      "Read(*)",
      "Bash(gemini:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)"
    ]
  },
  "env": {
    "HTTP_PROXY": "http://127.0.0.1:1080",
    "HTTPS_PROXY": "http://127.0.0.1:1080"
  },
  "hooks": 
{
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/prompt_tracker.py UserPromptSubmit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/prompt_tracker.py Stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/prompt_tracker.py Notification"
          }
        ]
      }
    ]
  }
}