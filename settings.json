{
  "permissions": {
    "allow": [
      "mcp__frame0-mcp-server__*",
      "WebFetch(*)",
      "Read(*)",
      "Bash(gemini:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)"
    ]
  },
  "env": {
    "HTTP_PROXY": "http://127.0.0.1:1080",
    "HTTPS_PROXY": "http://127.0.0.1:1080"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -group 'PROJECT_NAME' -title 'Stopped' -subtitle \"$(date '+%m%d %H:%M')\" -message \"Event: $CLAUDE_EVENT_TYPE | Tool: ${CLAUDE_TOOL_NAME:-N/A} | Files: $(echo \"$CLAUDE_FILE_PATHS\" | wc -w | tr -d ' ')\" -sound Glass"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -sound default -title cc -subtitle \"$(date '+%m%d %H:%M')\" -message notifier"
          }
        ]
      }
    ]
  }
}